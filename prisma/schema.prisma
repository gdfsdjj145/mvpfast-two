generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  wechatOpenId String?
  createdDate  DateTime @default(now()) @map("created_time")
  nickName     String
  phone        String?
  email        String?

  @@unique([wechatOpenId, phone, email])
}

model VerificationCode {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  expiresAt  DateTime @default(now()) @map("created_time")
  createdAt  DateTime @default(now())
  code       String
}

model VerificationWxQrCode {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String   @unique
  isScan     Boolean
  expires    DateTime @default(now()) @map("created_time")
  openId     String?
}

model Order {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier     String
  createdAt      DateTime @default(now())
  orderId        String   @unique
  transactionId  String   @unique
  orderType      String?
  price          Float?
  name           String?
  promoter       String?
  promotionPrice Float?   @default(0)
  Inviter        String?
}

model Promotion {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  // 推广人
  identifier     String
  createdAt      DateTime @default(now())
  orderType      String
  promotionPrice Float?   @default(0)
  // 购买者
  purchaser      String
  checkout       Boolean  @default(false)
}

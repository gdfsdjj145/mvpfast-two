generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  wechatOpenId String   @unique
  createdDate  DateTime @default(now()) @map("created_time")
  nickName     String
  phone        String
  email        String
}

model VerificationCode {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  expiresAt  DateTime @default(now()) @map("created_time")
  createdAt  DateTime @default(now())
  code       String
}

model VerificationWxQrCode {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String   @unique
  isScan     Boolean
  expires    DateTime @default(now()) @map("created_time")
  openId     String?
}

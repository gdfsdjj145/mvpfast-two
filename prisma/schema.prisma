generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          String   @id @default(uuid())
  supabaseId  String?
  createdDate DateTime @default(now())
  nickName    String
  phone       String?
  email       String?
  avatar      String?

  @@unique([supabaseId, phone, email])
}

model VerificationCode {
  id         String   @id @default(uuid())
  identifier String
  expiresAt  DateTime @default(now())
  createdAt  DateTime @default(now())
  code       String
}

model VerificationWxQrCode {
  id         String   @id @default(uuid())
  identifier String   @unique
  isScan     Boolean
  expires    DateTime @default(now())
  openId     String?
}

model Order {
  id             String   @id @default(uuid())
  identifier     String
  createdAt      DateTime @default(now())
  orderId        String   @unique
  transactionId  String   @unique
  orderType      String?
  price          Float?
  name           String?
  promoter       String?
  promotionPrice Float?   @default(0)
  Inviter        String?
}

model Promotion {
  id             String   @id @default(uuid())
  // 推广人
  identifier     String
  createdAt      DateTime @default(now())
  orderType      String
  promotionPrice Float?   @default(0)
  // 购买者
  purchaser      String
  checkout       Boolean  @default(false)
}

model PayOrder {
  id         String   @id @default(uuid())
  identifier String
  createdAt  DateTime @default(now())
  status     String
  orderType  String
  price      Float
  sign       String?
}

model DbUserDemo {
  id          String   @id @default(uuid())
  createdDate DateTime @default(now())
  nickName    String
}

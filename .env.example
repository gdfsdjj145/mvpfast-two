# ===========================================
# MVP Fast Web 环境变量配置
# ===========================================
# 复制此文件为 .env 并填写实际值
# cp .env.example .env

# -------------------------------------------
# 数据库配置 (必需)
# -------------------------------------------
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority"

# -------------------------------------------
# Auth.js v5 配置 (必需)
# -------------------------------------------
# 密钥 (用于加密 JWT/session)
# 生成方式: openssl rand -base64 32
AUTH_SECRET=""

# 站点 URL (反向代理部署时需要手动设置，本地开发自动检测)
# AUTH_URL="https://your-domain.com"

# -------------------------------------------
# 网站配置 (必需)
# -------------------------------------------
# API 基础 URL (用于客户端请求)
NEXT_PUBLIC_API_URL="http://localhost:3000"

# 网站 URL (用于 SEO、sitemap、回调地址等)
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# -------------------------------------------
# 微信开放平台 (PC 端扫码登录)
# -------------------------------------------
NEXT_PUBLIC_WECHAT_OPEN_APPID=""
WECHAT_OPEN_APPID=""
WECHAT_OPEN_APPSECRET=""

# -------------------------------------------
# 微信支付 (微信公众号/小程序支付)
# -------------------------------------------
NEXT_PUBLIC_WECHAT_APPID=""
WECHAT_MCHID=""
WECHAT_SERIAL_NO=""
# PKCS#8 格式私钥，换行符用 \n 替代
WECHAT_PRIVATE_KEY=""

# -------------------------------------------
# 云购支付 (与微信支付二选一)
# -------------------------------------------
NEXT_PUBLIC_YUNGOUOS_MCH_ID=""
NEXT_PUBLIC_YUNGOUOS_API_KEY=""

# -------------------------------------------
# 阿里云短信 (手机验证码登录)
# -------------------------------------------
ALIYUN_ACCESS_KEY_ID=""
ALIYUN_ACCESS_KEY_SECRET=""
ALIYUN_SMS_SIGN_NAME=""
ALIYUN_SMS_TEMPLATE_CODE=""

# -------------------------------------------
# 邮件 SMTP (邮箱验证码登录)
# -------------------------------------------
MAIL_HOST=""
MAIL_PORT="465"
MAIL_USER=""
MAIL_PASS=""

# -------------------------------------------
# AI 服务 (聊天功能)
# -------------------------------------------
# OpenRouter: https://openrouter.ai/keys
OPENROUTER_API_KEY=""
# 硅基流动: https://cloud.siliconflow.cn
SILICONFLOW_API_KEY=""

# -------------------------------------------
# Cloudflare R2 存储 (图片上传)
# -------------------------------------------
# 端点格式: https://<account_id>.r2.cloudflarestorage.com
R2_ENDPOINT=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME=""
# 公开访问域名，如 https://cdn.example.com
R2_PUBLIC_DOMAIN=""

# -------------------------------------------
# 可选配置
# -------------------------------------------
# Google 站点验证码
# GOOGLE_SITE_VERIFICATION=""

# 数据加密密钥 (不设置则使用 AUTH_SECRET)
# 生成方式: openssl rand -base64 32
# ENCRYPTION_SECRET=""

# 日志级别: trace, debug, info, warn, error, fatal
# 默认: development=debug, production=info
# LOG_LEVEL=""

# -------------------------------------------
# 开发环境说明
# -------------------------------------------
# NODE_ENV=development 时可用万能验证码 "000000" 登录
# 无需配置短信/邮件服务即可测试登录功能

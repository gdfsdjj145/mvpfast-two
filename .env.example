# ===========================================
# MVP Fast Web 环境变量配置示例
# ===========================================
# 复制此文件为 .env 并填写实际值
# cp .env.example .env

# -------------------------------------------
# 数据库配置 (必需)
# -------------------------------------------
# MongoDB 连接字符串
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority"

# -------------------------------------------
# NextAuth 配置 (必需)
# -------------------------------------------
# NextAuth 密钥 (用于加密 session)
# 生成方式: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-key"

# NextAuth URL (生产环境必须设置)
NEXTAUTH_URL="http://localhost:3000"

# NextAuth Salt (可选，用于自定义 token 加密)
# NEXTAUTH_SALT=""

# -------------------------------------------
# 网站配置 (必需)
# -------------------------------------------
# API 基础 URL
NEXT_PUBLIC_API_URL="http://localhost:3000"

# 网站 URL
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# -------------------------------------------
# 微信配置 (支付和登录功能需要)
# -------------------------------------------
# 微信 AppID (公众号/小程序)
NEXT_PUBLIC_WECHAT_APPID=""

# 微信开放平台配置（PC端扫码登录）
# 回调地址使用 NEXT_PUBLIC_SITE_URL
NEXT_PUBLIC_WECHAT_OPEN_APPID=你的开放平台AppID
WECHAT_OPEN_APPID=你的开放平台AppID
WECHAT_OPEN_APPSECRET=你的开放平台AppSecret

# 微信商户号
WECHAT_MCHID=""

# 微信 API 证书序列号
WECHAT_SERIAL_NO=""

# 微信 API 私钥 (PKCS#8 格式，换行符用 \n 替代)
# 示例: "-----BEGIN PRIVATE KEY-----\nMIIEvQIBADA...\n-----END PRIVATE KEY-----"
WECHAT_PRIVATE_KEY=""

# -------------------------------------------
# 云购支付配置 (可选，二选一)
# -------------------------------------------
# 云购支付商户号
NEXT_PUBLIC_YUNGOUOS_MCH_ID=""

# 云购支付 API 密钥
NEXT_PUBLIC_YUNGOUOS_API_KEY=""

# -------------------------------------------
# 阿里云短信配置 (手机验证码需要)
# -------------------------------------------
# 阿里云 AccessKey ID
ALIYUN_ACCESS_KEY_ID=""

# 阿里云 AccessKey Secret
ALIYUN_ACCESS_KEY_SECRET=""

# 短信签名名称
ALIYUN_SMS_SIGN_NAME=""

# 短信模板 Code
ALIYUN_SMS_TEMPLATE_CODE=""

# -------------------------------------------
# 邮件配置 (邮箱验证码需要)
# -------------------------------------------
# SMTP 服务器地址
MAIL_HOST="smtp.example.com"

# SMTP 端口 (465 for SSL, 587 for TLS)
MAIL_PORT="465"

# 邮箱账号
MAIL_USER=""

# 邮箱密码/授权码
MAIL_PASS=""

# -------------------------------------------
# SEO 配置 (可选)
# -------------------------------------------
# Google 站点验证码
GOOGLE_SITE_VERIFICATION=""

# Twitter 账号 (不带 @)
# TWITTER_HANDLE=""

# -------------------------------------------
# 安全配置 (可选)
# -------------------------------------------
# 数据加密密钥 (用于敏感数据加密)
# 生成方式: openssl rand -base64 32
# 如果不设置，将使用 NEXTAUTH_SECRET
# ENCRYPTION_SECRET=""

# -------------------------------------------
# 日志配置 (可选)
# -------------------------------------------
# 日志级别 (trace, debug, info, warn, error, fatal)
# 默认: development=debug, production=info, test=error
# LOG_LEVEL=""
